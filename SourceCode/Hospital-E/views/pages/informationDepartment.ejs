<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body>
		<% include ../partials/sidebar %>
		<header><% include ../partials/header %></header>
		<!--<div class="body-wrapper"-->
			<div class ="box_top_content">
				<div class="box_left_name_content">
					<div class="main_name">Chuyên Khoa</div>
				</div>
				
				<form id="form-sidebar">
					<div class="action_content_introduce">
						<input class ="search" type="text" id="dataSearch" name="data" placeholder="Tìm kiếm">
						<a id="search"><img src="/images/icons/search.png" width="32px" onclick="search()"></a>
						<a href=""><img src="/images/icons/back.png" width="32px"></a>
						<a href="#create"><img src="/images/icons/create.png" width="32px"></a>
					</div>
				</form>
				
				<div class="clear"></div>
			</div>
			<div id="listDepartments">
				<% include ./listDepartments %>
			</div>
			<!--Create ACTION-->
			<div href="#_" id ="create" class="create_action">
				<div class="center_box_action">
					<div class="img_box_instroduce_update">
						<img src="">
						<form method="post" enctype="multipart/form-data">
							<div class="input_file_img">
								<label for="image">Choose file to upload</label>
								<input type="file" id="profile_pic" name="image"
									accept=".jpg, .jpeg, .png">
							</div>
						</form>
					</div>
					<div class="text_box_instroduce_update" >
						<h1 class ="title_box_instroduce">
							Ten Khoa
						</h1>
						<form id="contactform" name="contact" method="post" action="#">
							<hr><p>
							<div class="row">
								<label for="_id">ID: <span class="req">*</span></label>
								<input type="text" name="_id" id="_id" class="txt" tabindex="1" placeholder="DEP101">
							</div>
								
							<div class="row">
								<label for="name">Ten Khoa:  <span class="req">*</span></label>
								<input type="name" name="name" id="name" class="txt" tabindex="2" placeholder="Phau Thuat">
							</div>
								
							<div class="row">
								<label for="description">Thong tin khoa:  <span class="req">*</span></label>
								<textarea type="" name="description" id="description" class="txtarea" tabindex="3" placeholder="Khoa thuc hien cac viec ...."></textarea>
							</div>
								
							<div class="row">
								<label for="address">Dia chi Khoa:  <span class="req">*</span></label>
								<textarea name="address" id="address" class="txtarea" tabindex="4" placeholder="Cau giay, Ha Noi"></textarea>
							</div>
							
							<div class="row">
								<label for="foundingOn">Thoi gian thanh lap:   <span class="req">*</span></label>
								<input type="date" name="foundingOn" id="foundingOn" class="txt" tabindex="5">
							</div>
		
							<div class="center">
								<a href="">
									<input type="submit" id="submitbtn" name="accept" value="Accept">
								</a>
								<a href="">
									<input type="submit" id="submitbtn" name="cancel" value="Cancel">
								</a>
							</div>
						</form>   
					</div>
				</div>
			</div>	
			<!--END Create-->
		<!-- </div> -->
	<div class="clear"></div>
	<footer><% include ../partials/footer %></footer>
	<script src="/js/infoDepartments.js"></script>
    </body>
</html>