<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %> 
      
    </head>
    <body>
    <!--
         Sidebar
    -->
        <% include ../partials/sidebar %>

    <!--
         Header
     -->
        <header><% include ../partials/header %></header>

    <!--
        Body
    -->
        <div class="body-wrapper">
            <div class="main_content">
                <h2 class = "main_name">Diễn đàn</h2>
                <div>
                    <button class="btn_add_question"><a>+ Gửi câu hỏi mới</a></button>
                </div>
                <hr />
                <div class="list_question">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Chủ đề</th>
                            <th scope="col">Người gửi</th>
                            <th scope="col">Thời gian gửi</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% posts.forEach(function(one_post){ %>
                        <tr>
                            <td scope="row"><a href="http://localhost:3000/dien-dan/chitiet?id=<%= one_post._id %>" style="color:black; font-size: 16px"><%= one_post.title %></a></td>
                            <td><%= one_post.authorId %></td>
                            <td><%= one_post.timestamp %></td>
                        </tr>
                        <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!--
                Select Function
            -->
            <div class ="select_function">
                <button class="btn-item-function">
                    Đặt lịch hẹn y tế
                </button>
                <button class="btn-item-function">
                    Xem hồ sơ bệnh án
                </button>
                <button class="btn-item-function">
                    Tra cứu bác sĩ
                </button>
            </div>

            <!--
                Clear Float
            -->
            <div class="clear"></div>
        </div>

     <!--
         Footer
     -->   
        <footer><% include ../partials/footer %></footer>
    </body>
</html>