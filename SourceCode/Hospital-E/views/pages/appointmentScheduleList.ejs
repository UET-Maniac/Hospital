<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body>
		<% include ../partials/sidebar %>
		<header><% include ../partials/header %></header>
        <div class ="box_top_content">
            <div class="box_left_name_content">
                <div class="main_name">Lịch hẹn</div>
            </div>
            
            <form id="form-sidebar">
                <div class="action_content_introduce">
                    <input class ="search" type="text" id="dataSearch" name="data" placeholder="Tìm kiếm">
                    <a id="search"><img src="/images/icons/search.png" width="32px" onclick="search()"></a>
                    <a href=""><img src="/images/icons/back.png" width="32px"></a>
                    <% if(objectType == 0) { %>
                        <a onclick="showScene('create')"><img src="/images/icons/create.png" width="32px"></a>
                    <% } %>
                </div>
            </form>
            
            <div class="clear"></div>
        </div>
        <div id="listAS">
            <% include ./listAS %>
        </div>
        
        <% if(objectType == 0) { %>
            <!--Create ACTION-->
            <div id ="create" class="create_action">
                <div class="center_box_action">
                    <form id="create-form">
                        <div class="text_box_instroduce_update" style="position: fixed;margin-top: 1%;margin-left: 20%;">
                            <h1 class ="title_box_instroduce" >
                                Tạo lịch hẹn
                            </h1>
                            <hr><p>	
                            <div class="row">
                                <label for="doctorId">ID bác sĩ:  <span class="req">*</span></label>
                                <input type="text" name="doctorId" id="doctorId" class="txt" tabindex="1" placeholder="USE100000001" required>
                            </div>
                                
                            <div class="row">
                                <label for="patientId">ID người đặt:  <span class="req">*</span></label>
                                <input type="text" name="patientId" id="patientId" class="txt" tabindex="2" placeholder="USE100000026" required>
                            </div>
                                
                            <div class="row">
                                <label for="time">Thời gian hẹn:   <span class="req">*</span></label>
                                <input type="datetime-local" name="time" id="time" class="txt" tabindex="3" placeholder="yyyy-mm-dd hh:mm:ss" required>
                            </div>

                            <div class="row">
                                <label for="address">Địa chỉ:  <span class="req">*</span></label>
                                <textarea name="address" id="address" class="txtarea" tabindex="4" placeholder="144 Cầu Giấy, Hà Nội" required></textarea>
                            </div>

                            <div class="row">
                                <label for="description">Mô tả:  <span class="req">*</span></label>
                                <textarea name="description" id="description" class="txtarea" tabindex="5" placeholder="Đạu bụng đi ngoài" required></textarea>
                            </div>
                            
                            <div class="center">
                                <button class="submitbtn" >Accept</button>
                                <button type="button" class="submitbtn" onclick="hideScene('create')">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>	
            <!--END Create-->
        <% } %>

        <div class="clear"></div>
        <footer><% include ../partials/footer %></footer>
    
        <script src="/js/appointmentScheduleList.js"></script>
        <script src="/js/table.js"></script>

    </body>
</html>